<UserControl x:Class="Client.View.DashboardUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      xmlns:view="clr-namespace:Client.View">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Menü" >
                <MenuItem 
        			Header="Logout" 
        			Command="{Binding logoutCommand}"/>
            </MenuItem>
        </Menu>
<!--
        <ListBox x:Name="listboxFolder1" Grid.Row="1" BorderThickness="0" 
     ItemsSource="{Binding dashboardWorkflows}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
-->
        
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding dashboardWorkflows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="{Binding name}" FontSize="16" FontWeight="Medium"  HorizontalAlignment="Center"/>
                            <Button Grid.Row="0" Content="+" Width="35" Height="25" Margin="150 5 10 10" 
                                    Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=view:DashboardUserControl}, Path=DataContext.startWorkflowCommand}" 
                                    CommandParameter="{Binding}" IsEnabled="{Binding startPermission}"/>
                            <Grid Grid.Row="1"  HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="AUTO" />
                                    <ColumnDefinition Width="AUTO" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Content="Name" FontWeight="Medium"/>
                                <Label Grid.Column="1" Content="Nr" FontWeight="Medium"/>
                                <ItemsControl ItemsSource="{Binding dashboardRows}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Grid.Row="0" Text="{Binding actStep.label}" FontSize="16" FontWeight="Medium"  HorizontalAlignment="Center"/>
                                                <TextBlock Grid.Row="1" Text="{Binding actStep.id}" FontSize="16" FontWeight="Medium"  HorizontalAlignment="Center"/>
                                                <Button Grid.Row="0" Content="{Binding actItem.state}" Width="100" Height="25" Margin="150 5 10 10" 
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=view:DashboardUserControl}, Path=DataContext.stepForwardCommand}" 
                                                        CommandParameter="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!--
        <ListView DockPanel.Dock="Left" Margin="10" ItemsSource="{Binding dashboardWorkflows}">
            <ListView.View>
                <GridView>
                    <GridView.Columns >
                        <GridViewColumn Header="Nutzername" DisplayMemberBinding="{Binding name}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
-->

    </DockPanel>
</UserControl>
