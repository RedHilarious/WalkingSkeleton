<Window x:Class="Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Width="800" Height="500" ResizeMode="NoResize">

    <DockPanel>
        <Menu DockPanel.Dock="Top" Visibility="{Binding DataContext.MenuVisibility, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
            <MenuItem Header="Ansicht" >
                <MenuItem 
                    Header="Workflow-Verwaltung" 
                    Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                    CommandParameter="{Binding workflowViewModel}" />
                <MenuItem 
                    Header="Nutzer-Verwaltung" 
                    Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" 
                    CommandParameter="{Binding userViewModel}" />
                <MenuItem
                    Header="Logout"
                    Command="{Binding DataContext.LogoutCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" />
            </MenuItem>
        </Menu>

        <ContentControl Content="{Binding CurrentPageViewModel}" />
    </DockPanel>
</Window>
